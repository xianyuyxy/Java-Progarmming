import java.util.Scanner;

public class WelcomeWithThreeMessage {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        for(int i=1;i<5;i++){
            for(int j=1;j<5;j++){
                if(i>=j){
                    System.out.print("|*|");
                }
            }
            System.out.println("\n");
        }
    }
}

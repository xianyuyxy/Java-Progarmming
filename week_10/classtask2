public class Circle {

    public static void main(String[] args) {
        Circle circle1 = new Circle();
        System.out.println("the area of " + circle1.radius + " is " + circle1.getArea());

        Circle circle2 = new Circle(25);
        System.out.println("the area of " + circle2.radius + " is " + circle2.getArea());

        Circle circle3 = new Circle(75);
        System.out.println("the area of " + circle3.radius + " is " + circle3.getArea());

        circle2.radius = 100;
        System.out.println("the area of " + circle2.radius + " is " + circle2.getArea());
    }


    double radius;

    Circle() {
        radius = 1;
    }

    Circle(double newRadius) {
        radius = newRadius;
    }

    double getArea() {
        return radius * radius * Math.PI;
    }

    double gerPer() {
        return 2 * Math.PI * radius;
    }

    void setRadius(double newRadius) {
        radius = newRadius;
    }
}

